= simple_form_for [category, product], :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :description
  = f.input :price
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), categories_path, :class => 'btn'
