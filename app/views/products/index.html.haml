- model_class = Product
.page-header
  %p#error= flash[:error]
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - products.each do |product|
      %tr
        %td= product.id
        %td= product.title
        %td= product.description
        %td= product.price
        %td= product.created_at
        %td
          = link_to 'Show', category_product_path(product.category, product), :class => 'btn btn-mini'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_category_product_path(product.category, product), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), category_product_path(product.category, product), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_category_product_path, :class => 'btn btn-primary'
